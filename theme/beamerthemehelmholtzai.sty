\mode<presentation>

\RequirePackage{booktabs}
\RequirePackage{fontspec}
\RequirePackage{hyperref}
\RequirePackage{minted}
\RequirePackage{tikz}
\RequirePackage{xcolor}

\usecolortheme{helmholtzai}
\usefonttheme{helmholtzai}
\useinnertheme{helmholtzai}
\useoutertheme{helmholtzai}

\usetikzlibrary{
    calc
}

\hypersetup{
    colorlinks=true,% hyperlinks will be coloured
    linkcolor=hgfdarkblue,
    urlcolor=hgfmint,
    citecolor=hgfinformation,
    anchorcolor=hgfmint
}

\newcommand{\source}[1]{%
    \newline
    \tiny\textcolor{hgfgray50}{Source: #1}
}

\newcommand{\reference}[1]{%
    \begin{tikzpicture}[remember picture, overlay]
        \node[
            anchor=south west,
            xshift=0.66cm,
            yshift=0.3cm,
            text=hgfgray,
            text width=0.55\paperwidth,
            align=left,
            inner sep=0,
            execute at begin node=\setlength{\baselineskip}{7pt}
        ] at (current page.south west){
            \tiny #1
        };
    \end{tikzpicture}
}

\newcommand{\collaborators}[2][0.25cm]{%
    \begin{tikzpicture}[remember picture, overlay]
        \node[
            anchor=south east,
            xshift=-0.4em,
            yshift=1.4em,
            inner sep=0,
        ] at (current page.south east) {
            \foreach \collaborator in #2 {%
                \hspace{0.2em}\includegraphics[height=#1]{\collaborator}
            }
        };
    \end{tikzpicture}
}

\mode<all>
