% research field
\newcommand{\rfslider}[1]{%
    \begin{tikzpicture}[overlay, remember picture]
        \draw [fill=#1, draw=none] 
            (current page.south east) --
            ++(0, 1.0em) --
            ++(-0.4\paperwidth, 0) --
            ++(-0.6em, -0.6em) --
            ++(-0.6\paperwidth, 0) --
            ++(0, -0.4em) --
            cycle;
    \end{tikzpicture}
}

% bottom slider
\newcommand{\bottomslider}[1]{%
    \begin{tikzpicture}[overlay, remember picture]
        \draw [fill=#1, draw=none] 
            (current page.south east) --
            ++(0, 1.2em) --
            ++(-0.25\paperwidth, 0) --
            ++(-0.6em, -0.6em) --
            ++(-0.75\paperwidth, 0) --
            ++(0, -0.6em) --
            cycle;
    \end{tikzpicture}
}

% top slider
\newcommand{\topslider}[1]{%
    \begin{tikzpicture}[overlay, remember picture]
        \draw [fill=#1, draw=none] 
            (current page.north west) --
            ++(0, -1.2em) --
            ++(0.25\paperwidth, 0) --
            ++(0.6em, 0.6em) --
            ++(0.75\paperwidth, 0) --
            ++(0, 0.6em) --
            cycle;
    \end{tikzpicture}
}

